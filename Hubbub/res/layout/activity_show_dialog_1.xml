<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="800dp" >

    <!-- Beginner / Intermediate and so on -->

    <Button
        android:id="@+id/buttons_maybe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_no"
        android:layout_alignBottom="@+id/button_no"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_teal"
        android:text="Maybe" />

    <Button
        android:id="@+id/button_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttons_yes"
        android:layout_alignBottom="@+id/buttons_yes"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_teal"
        android:text="No" />

    <TextView
        android:id="@+id/dialog_text_num_maybe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dialog_text_num_yes"
        android:layout_alignBottom="@+id/dialog_text_num_yes"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/dialog_bub_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_bub_date"
        android:layout_marginTop="17dp"
        android:layout_toLeftOf="@+id/dialog_bub_date"
        android:text="@+string/bub_location" />

    <TextView
        android:id="@+id/dialog_bub_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_event_title"
        android:layout_marginTop="52dp"
        android:layout_toLeftOf="@+id/dialog_bub_location"
        android:text="@string/bub_start_time" />

    <TextView
        android:id="@+id/dialog_bub_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dialog_bub_time"
        android:layout_alignBottom="@+id/dialog_bub_time"
        android:layout_toRightOf="@+id/dialog_event_picture"
        android:text="@+string/bub_start_date" />

    <TextView
        android:id="@+id/dialog_text_num_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_bub_location"
        android:layout_marginTop="44dp"
        android:layout_toLeftOf="@+id/dialog_bub_time"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/dialog_text_num_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dialog_text_num_maybe"
        android:layout_alignBottom="@+id/dialog_text_num_maybe"
        android:layout_alignRight="@+id/dialog_bub_date"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/buttons_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_text_num_yes"
        android:layout_marginTop="22dp"
        android:layout_toLeftOf="@+id/dialog_event_title"
        android:background="@drawable/button_teal"
        android:text="YES" />

    <ImageView
        android:id="@+id/dialog_event_picture"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/dialog_text_num_maybe"
        android:layout_marginTop="20dp"
        android:src="@drawable/hubbub_logo" />

    <TextView
        android:id="@+id/dialog_event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dialog_event_picture"
        android:layout_below="@+id/dialog_event_picture"
        android:layout_marginTop="14dp"
        android:text="@string/event_name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>