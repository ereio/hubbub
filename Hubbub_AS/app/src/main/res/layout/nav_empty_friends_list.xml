<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_account_circle_black_24dp"
        android:id="@+id/imagebutton_account_picture"
        android:elevation="5dp"
        android:background="@color/MediumTurquoise"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textview_friend_username"
        android:layout_toStartOf="@+id/textview_friend_username" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/empty_follower_list"
        android:id="@+id/textview_friend_username"
        android:background="@color/DarkCyan"
        android:elevation="5dp"
        android:layout_marginTop="21dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="68dp"
        android:layout_marginEnd="68dp" />
</RelativeLayout>