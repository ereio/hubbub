<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/following_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="3dp"
        android:layout_margin="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayout_empty_view"
            android:background="@color/ColorPrimaryDark">

            <ImageView
                android:id="@+id/picture_empty_header"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/events_calendar_icon"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/text_empty_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty_error_default"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/picture_empty_header"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
</android.support.v7.widget.CardView>

