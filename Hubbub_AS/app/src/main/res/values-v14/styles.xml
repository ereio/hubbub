<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
     <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_actionbar_hubbub</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Actionbar_hubbub</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Actionbar_hubbub</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Actionbar_hubbub</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Actionbar_hubbub</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Actionbar_hubbub</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_actionbar_hubbub</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_actionbar_hubbub</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Actionbar_hubbub</item>
        
        
    </style>

    <style name="ActionBar.Solid.Actionbar_hubbub" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_actionbar_hubbub</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_actionbar_hubbub</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_actionbar_hubbub</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Actionbar_hubbub</item>
    </style>

    <style name="ActionBar.Transparent.Actionbar_hubbub" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_actionbar_hubbub</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Actionbar_hubbub</item>
    </style>

    <style name="PopupMenu.Actionbar_hubbub" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_actionbar_hubbub</item>	
    </style>

    <style name="DropDownListView.Actionbar_hubbub" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_actionbar_hubbub</item>
    </style>

    <style name="ActionBarTabStyle.Actionbar_hubbub" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_actionbar_hubbub</item>
    </style>

    <style name="DropDownNav.Actionbar_hubbub" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_actionbar_hubbub</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_actionbar_hubbub</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_actionbar_hubbub</item>
    </style>
    
    <style name="ProgressBar.Actionbar_hubbub" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_actionbar_hubbub</item>
    </style>
    
    <style name="ActionButton.CloseMode.Actionbar_hubbub" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_actionbar_hubbub</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Actionbar_hubbub.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Actionbar_hubbub</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Actionbar_hubbub</item>
    </style>

</resources>
